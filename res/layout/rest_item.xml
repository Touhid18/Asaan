<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/website"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <RelativeLayout
                android:id="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/tvRestaurentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Restaurent Name"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/TextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tvRestaurentName"
                    android:text="Cuisine Type"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/TextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="0.5 mile"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/TextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/TextView3"
                    android:layout_below="@+id/TextView3"
                    android:text="2"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll1"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Like: 70%"
                    android:textColor="@color/Blue" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Visits: 5 times"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="57 friends"
                    android:textColor="@color/green" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="0dip"
            android:layout_height="32dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#7f00A000"
            android:text="Call"
            android:textSize="12sp" />

        <Button
            android:layout_width="0dip"
            android:layout_height="32dp"
            android:layout_margin="1dp"
            android:layout_weight="1.1"
            android:background="#7f00A000"
            android:text="Menu"
            android:textSize="12sp" />

        <Button
            android:layout_width="0dip"
            android:layout_height="32dp"
            android:layout_margin="1dp"
            android:layout_weight="1.2"
            android:background="#7f00A000"
            android:text="Order"
            android:textSize="12sp" />

        <Button
            android:layout_width="0dip"
            android:layout_height="32dp"
            android:layout_margin="1dp"
            android:layout_weight="1.5"
            android:background="#7f00A000"
            android:text="Reserve"
            android:textSize="12sp" />

        <Button
            android:layout_width="0dip"
            android:layout_height="32dp"
            android:layout_margin="1dp"
            android:layout_weight="1.7"
            android:background="#7f00A000"
            android:text="Gift Card"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>